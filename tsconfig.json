{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "baseUrl": "./src/",
    "paths": {
      "@/Components/*": [
        "Components/*"
      ],
      "@/Services/*": [
        "Services/*"
      ],
      "@/Context/*": [
        "Context/*"
      ],
      "@/styles/*": [
        "styles/*"
      ],
      "@/fonts/*": [
        "fonts/*"
      ],
    },
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve"
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "next.config.js"
  ],
  "exclude": [
    "node_modules"
  ]
}